{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug main.py with CLI args",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size", "2",
                "--gpus", "0",
                "--exp_name", "SSLTIE_debugging",
                "--eval_freq", "1",
                "--eval_start", "1",
                "--img_aug", "moco_v2",
                "--equi_loss_type", "mse",
                "--dataset_mode", "Debug",
                "--rescale_factor", "0.5", "1.0",
                "--max_rotation_angle", "30",
                "--aud_aug", "SpecAug",
                "--trainset_path", "dir_for_debugging",
                "--test_path", "dir_for_debugging",
                "--epochs", "100"
            ],
            "env": {
                "DATA": "/absolute/path/to/DATA" // Set this to your actual DATA directory
            }
        }
    ]
}